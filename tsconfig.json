{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "types": ["@types/node"],
    "typeRoots": ["node_modules/@types"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    ".cache",
    "node_modules",
    "dist",
    "public",
    "scripts",
    "tmp"
  ]
}
